datasource db {
	provider	= "postgresql"
	url			= env("DATABASE_URL")
	directUrl	= env("DIRECT_URL")
}

generator client {
	provider	= "go run github.com/steebchen/prisma-client-go"
}

model User {
	id					String	@id @default(cuid())
	email				String	@unique
	password			String
	subscribe			Boolean	@default(false)
	subscribeRenewal	Datetime @default(now())

	@@map("user")
}

model Search {
	id			String	@id @default(cuid())
	location	String
	category	String
	radius		Int
	latitude	Float
	longitude	Float

	results		Result[]
	@@map("search")
}

model Result {
	id				String @id @default(cuid())
	name			String
	phone_number	String
	email			String
	linkedin		String
	@@map("result")
}
